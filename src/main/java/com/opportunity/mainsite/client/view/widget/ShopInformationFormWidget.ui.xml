<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:o="urn:import:com.opportunity.mainsite.client.view.widget"
	xmlns:maps="urn:import:com.google.gwt.maps.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">
	
	<ui:style>
		.swfupload {
			position : absolute;
		}
	</ui:style>
	
	
	<g:HTMLPanel>
		<div>
			<table>
				<o:InputField ui:field="shopName" label="Shop Name">
					<o:input>
						<g:TextBox></g:TextBox>
					</o:input>
				</o:InputField>

				<o:InputField ui:field="shopType" label="Shop Type">
					<o:input>
						<g:ListBox>
							<g:item>Food</g:item>
							<g:item>Leisure</g:item>
							<g:item>Sport</g:item>
						</g:ListBox>
					</o:input>
				</o:InputField>
				
				<o:InputField ui:field="email" label="Shop Email">
					<o:input>
						<g:TextBox></g:TextBox>
					</o:input>
				</o:InputField>
				
				<o:InputField ui:field="country" label="Country">
					<o:input>
						<g:ListBox>
							<g:item>France</g:item>
							<g:item>Br√©sil</g:item>
							<g:item>Allemagne</g:item>
							<g:item>Cameroun</g:item>
						</g:ListBox>
					</o:input>
				</o:InputField>
				
				<o:InputField ui:field="state" label="State">
					<o:input>
						<g:TextBox/>
					</o:input>
				</o:InputField>

				<o:InputField ui:field="zip" label="Zip">
					<o:input>
						<g:TextBox/>
					</o:input>
				</o:InputField>

				<o:InputField ui:field="city" label="State">
					<o:input>
						<g:TextBox/>
					</o:input>
				</o:InputField>

				<o:InputField ui:field="street" label="Street Name">
					<o:input>
						<g:TextBox></g:TextBox>
					</o:input>
				</o:InputField>
				
				<o:InputField ui:field="number" label="Number">
					<o:input>
						<g:TextBox></g:TextBox>
					</o:input>
				</o:InputField>
				
				<o:InputField ui:field="description" label="Description">
					<o:input>
						<g:TextArea></g:TextArea>
					</o:input>
				</o:InputField>

				<tr>
					<td colspan="2">
						<span id="upload"></span>
						<g:Button ui:field="startUploadButton" text="Upload Images" />
					</td>
				</tr>

				<tr>
					<td align="right">
						<g:Button ui:field="submitButton" text="submit" />
					</td>
					<td align="right">
						<g:Button ui:field="clear" text="clear" />
					</td>
				</tr>
			</table>
			<div>
				<maps:MapWidget ui:field="map" width="500px" height="300px"
					visible="true"></maps:MapWidget>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>