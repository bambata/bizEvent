<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:o="urn:import:com.opportunity.mainsite.client.view.widget"
	xmlns:maps="urn:import:com.google.gwt.maps.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default">

	<ui:style>
		.uploadButton>object {
			position: absolute;
		}
		
		.mapContainer {
			width: 450px;
			margin: auto;
			padding: 20px;
		}
		
		.formContainer {
			padding: 20px;
		}
		
		.headerInputs {
			float: left;
		}
		
		.buttonContainer {
			width: 150px;
		}
	</ui:style>

	<ui:with field='res'
		type='com.opportunity.mainsite.client.MainSiteResources' />

	<g:DockLayoutPanel height="500px" width="800px">
		<g:north size="100">
			<g:HTMLPanel>
				<o:InputField label="Shop Name">

					<g:TextBox ui:field="shopName"></g:TextBox>

				</o:InputField>
				<o:InputField label="Shop Email">

					<g:TextBox ui:field="email"></g:TextBox>

				</o:InputField>
				<o:InputField label="Shop Type">

					<g:ListBox ui:field="shopType">
						<g:item>Food</g:item>
						<g:item>Leisure</g:item>
						<g:item>Sport</g:item>
					</g:ListBox>

				</o:InputField>
			</g:HTMLPanel>
		</g:north>

		<g:west size="300">
			<g:HTMLPanel>
				<div class="{style.formContainer}">
					<o:InputField label="Country">

						<g:ListBox ui:field="country">
							<g:item>France</g:item>
							<g:item>Br√©sil</g:item>
							<g:item>Allemagne</g:item>
							<g:item>Cameroun</g:item>
						</g:ListBox>

					</o:InputField>

					<o:InputField label="City">

						<g:TextBox ui:field="city" />

					</o:InputField>

					<o:InputField label="Zip">

						<g:TextBox ui:field="zip" />

					</o:InputField>

					<g:TextBox ui:field="test" />

					<o:InputField label="Street Name">

						<g:TextBox ui:field="street"></g:TextBox>

					</o:InputField>

					<o:InputField label="Number">

						<g:TextBox ui:field="number"></g:TextBox>

					</o:InputField>

					<o:InputField label="Description">

						<g:TextArea ui:field="description"></g:TextArea>

					</o:InputField>

				</div>

				<table>
					<tr>
						<div>
							<span id="upload"></span>
							<g:Button ui:field="startUploadButton" text="Browse ..." />
						</div>
					</tr>
					<tr>
						<td align="right" class="{style.buttonContainer}">
							<g:Button ui:field="submitButton" text="submit" />
						</td>
						<td align="right" class="{style.buttonContainer}">
							<g:Button ui:field="clear" text="clear" />
						</td>
					</tr>
				</table>

			</g:HTMLPanel>
		</g:west>
		<g:east size="475">
			<g:HTMLPanel>
				<div class="{style.mapContainer}">
					<maps:MapWidget ui:field="map" width="450px" height="275px"
						visible="true"></maps:MapWidget>
				</div>
			</g:HTMLPanel>
		</g:east>
	</g:DockLayoutPanel>

</ui:UiBinder>